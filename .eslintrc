{
    "env": {
        "browser": true,
        "jquery": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "gtag": "readonly"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "space-before-function-paren": ["error", { "anonymous": "always", "named": "never", "asyncArrow": "always" }]
    }
}
